# Git Attributes for AgTools Professional Crop Consulting System

# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# JavaScript files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# JSON files
*.json text eol=lf

# SQL files
*.sql text eol=lf

# Markdown files
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# HTML/Template files
*.html text eol=lf
*.htm text eol=lf
*.jinja text eol=lf
*.jinja2 text eol=lf

# CSS files
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# CSV files (treat as text)
*.csv text eol=lf

# Requirements files
requirements*.txt text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.h5 binary
*.pkl binary
*.joblib binary
*.npy binary
*.npz binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.rar binary

# Python bytecode should not be in repo
*.pyc binary
*.pyo binary
*.pyd binary

# GitHub linguist overrides (for repository language detection)
# SHOW ALL LANGUAGES in stats

# Markdown - show in language stats
*.md linguist-detectable=true

# License file - keep visible
LICENSE linguist-detectable=true

# Config files - show in stats
.gitignore linguist-detectable=true
*.ini linguist-detectable=true
requirements*.txt linguist-detectable=true
pytest.ini linguist-detectable=true
manifest.json linguist-detectable=true

# Database files should be detected as SQL
*.sql linguist-detectable

# HTML templates - detect as HTML
*.html linguist-detectable

# CSS files - detect as CSS
*.css linguist-detectable

# JavaScript files - detect as JavaScript
*.js linguist-detectable

# JSON files (except manifest) - mark as generated
backend/static/manifest.json linguist-generated
tests/*.json linguist-generated

# Core application code - NOT vendored
database/* linguist-vendored=false
backend/* linguist-vendored=false
backend/services/* linguist-vendored=false
backend/middleware/* linguist-vendored=false
backend/mobile/* linguist-vendored=false
backend/templates/* linguist-vendored=false
backend/static/* linguist-vendored=false
frontend/* linguist-vendored=false
frontend/ui/* linguist-vendored=false
frontend/api/* linguist-vendored=false
src/* linguist-vendored=false

# Python is the primary language
*.py linguist-detectable=true

# Ensure all Python modules are counted
backend/**/*.py linguist-detectable=true
frontend/**/*.py linguist-detectable=true
database/*.py linguist-detectable=true
tests/*.py linguist-detectable=true

# Markdown files - SHOW in language stats (linguist-detectable)
*.md linguist-detectable=true
docs/*.md linguist-detectable=true
docs/**/*.md linguist-detectable=true
tests/*.md linguist-detectable=true
README.md linguist-detectable=true
CHANGELOG.md linguist-detectable=true
