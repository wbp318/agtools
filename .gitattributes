docker-compose.yml linguist-detectable=true

# Jinja templates - detectable
*.jinja linguist-language=Jinja
*.jinja linguist-detectable=true
*.jinja2 linguist-language=Jinja
*.jinja2 linguist-detectable=true

# =============================================================================
# GENERATED/BUILD OUTPUT - EXCLUDE FROM STATS
# =============================================================================

dist/** linguist-generated=true
build/** linguist-generated=true
frontend/dist/** linguist-generated=true
frontend/build/** linguist-generated=true

# =============================================================================
# SHOW ALL LANGUAGES - NOTHING VENDORED
# =============================================================================

* linguist-vendored=false
*.py linguist-vendored=false
*.md linguist-vendored=false
*.sql linguist-vendored=false
*.html linguist-vendored=false
*.css linguist-vendored=false
*.js linguist-vendored=false
*.json linguist-vendored=false
*.yml linguist-vendored=false
*.yaml linguist-vendored=false
*.toml linguist-vendored=false
*.sh linguist-vendored=false
*.bat linguist-vendored=false
*.jinja linguist-vendored=false
*.jinja2 linguist-vendored=false
*.feature linguist-vendored=false
*.spec linguist-vendored=false

# =============================================================================
# DIFF AND MERGE
# =============================================================================

# Use union merge for requirements files
requirements*.txt merge=union

# Database schemas - use SQL diff
*.sql diff=sql
