# Git Attributes for AgTools
# Handles line endings, language detection, and file type classification

# =============================================================================
# LINE ENDING NORMALIZATION
# =============================================================================

# Auto-detect text files and normalize to LF
* text=auto

# Source code - always LF
*.py text eol=lf
*.pyi text eol=lf
*.pyw text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.sql text eol=lf
*.md text eol=lf
*.sh text eol=lf
*.html text eol=lf
*.htm text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# F# files
*.fs text eol=lf
*.fsx text eol=lf
*.fsi text eol=lf
*.fsproj text eol=lf

# PyInstaller spec files (Python)
*.spec text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.env text eol=lf

# Templates
*.jinja text eol=lf
*.jinja2 text eol=lf

# Data files
*.csv text eol=lf
*.feature text eol=lf

# Build/dependency files
requirements*.txt text eol=lf
Dockerfile text eol=lf
*.dockerfile text eol=lf

# =============================================================================
# BINARY FILES
# =============================================================================

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.bmp binary

# Machine learning models
*.h5 binary
*.pkl binary
*.joblib binary
*.npy binary
*.npz binary
*.pt binary
*.pth binary
*.onnx binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.rar binary
*.7z binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Office documents
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary

# Python bytecode (should be gitignored, but just in case)
*.pyc binary
*.pyo binary
*.pyd binary

# Lock files
*.lock binary

# =============================================================================
# GITHUB LINGUIST - LANGUAGE DETECTION (ALL DETECTABLE)
# =============================================================================

# Python - primary language
*.py linguist-language=Python
*.py linguist-detectable=true
*.py linguist-vendored=false
*.pyi linguist-language=Python
*.pyi linguist-detectable=true
*.pyw linguist-language=Python
*.pyw linguist-detectable=true
*.spec linguist-language=Python
*.spec linguist-detectable=true

# F# - detectable
*.fs linguist-language=F#
*.fs linguist-detectable=true
*.fs linguist-vendored=false
*.fsx linguist-language=F#
*.fsx linguist-detectable=true
*.fsx linguist-vendored=false
*.fsi linguist-language=F#
*.fsi linguist-detectable=true
*.fsproj linguist-detectable=true

# Markdown - detectable
*.md linguist-language=Markdown
*.md linguist-detectable=true
*.md linguist-vendored=false
README.md linguist-detectable=true
CHANGELOG.md linguist-detectable=true
LICENSE linguist-detectable=true

# SQL - detectable
*.sql linguist-language=SQL
*.sql linguist-detectable=true

# HTML - detectable
*.html linguist-language=HTML
*.html linguist-detectable=true
*.htm linguist-language=HTML
*.htm linguist-detectable=true

# CSS - detectable
*.css linguist-language=CSS
*.css linguist-detectable=true
*.scss linguist-language=SCSS
*.scss linguist-detectable=true
*.less linguist-language=Less
*.less linguist-detectable=true

# JavaScript - detectable
*.js linguist-language=JavaScript
*.js linguist-detectable=true
