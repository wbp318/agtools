# Git Attributes for AgTools
# Handles line endings, language detection, and file type classification

# =============================================================================
# LINE ENDING NORMALIZATION
# =============================================================================

# Auto-detect text files and normalize to LF
* text=auto

# Source code - always LF
*.py text eol=lf
*.pyi text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.sql text eol=lf
*.md text eol=lf
*.sh text eol=lf
*.html text eol=lf
*.htm text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.env text eol=lf

# Templates
*.jinja text eol=lf
*.jinja2 text eol=lf

# Data files
*.csv text eol=lf
*.feature text eol=lf

# Build/dependency files
requirements*.txt text eol=lf
Dockerfile text eol=lf
*.dockerfile text eol=lf

# =============================================================================
# BINARY FILES
# =============================================================================

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.bmp binary

# Machine learning models
*.h5 binary
*.pkl binary
*.joblib binary
*.npy binary
*.npz binary
*.pt binary
*.pth binary
*.onnx binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.rar binary
*.7z binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Office documents
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary

# Python bytecode (should be gitignored, but just in case)
*.pyc binary
*.pyo binary
*.pyd binary

# =============================================================================
# GITHUB LINGUIST - LANGUAGE DETECTION
# =============================================================================

# Primary language: Python
*.py linguist-language=Python
*.py linguist-detectable=true
*.pyw linguist-language=Python

# Backend code - not vendored (count in stats)
backend/*.py linguist-vendored=false
backend/**/*.py linguist-vendored=false
frontend/*.py linguist-vendored=false
frontend/**/*.py linguist-vendored=false
database/*.py linguist-vendored=false
tests/*.py linguist-vendored=false

# Documentation - show in language stats
*.md linguist-detectable=true
README.md linguist-detectable=true
CHANGELOG.md linguist-detectable=true
docs/*.md linguist-detectable=true
docs/**/*.md linguist-detectable=true

# SQL files
*.sql linguist-language=SQL
*.sql linguist-detectable=true

# HTML templates
*.html linguist-language=HTML
*.html linguist-detectable=true

# CSS stylesheets
*.css linguist-language=CSS
*.css linguist-detectable=true

# JavaScript
*.js linguist-language=JavaScript
*.js linguist-detectable=true

# JSON - config files are generated, others are not
backend/static/manifest.json linguist-generated=true
tests/*.json linguist-generated=true
*.json linguist-detectable=true

# Gherkin feature files (BDD tests)
*.feature linguist-language=Gherkin
*.feature linguist-detectable=true

# Configuration files - show in stats
.gitignore linguist-detectable=true
requirements*.txt linguist-detectable=true
pytest.ini linguist-detectable=true
LICENSE linguist-detectable=true

# =============================================================================
# GENERATED/VENDORED EXCLUSIONS
# =============================================================================

# Mark generated files
build/** linguist-generated=true
dist/** linguist-generated=true
*.min.js linguist-generated=true
*.min.css linguist-generated=true

# Environment files are config, not code
.env* linguist-generated=true

# Batch/shell scripts for Windows - mark as generated (utility scripts)
*.bat linguist-generated=true
*.cmd linguist-generated=true

# =============================================================================
# DIFF AND MERGE
# =============================================================================

# Use union merge for requirements files
requirements*.txt merge=union

# Lock files should not be manually merged
*.lock binary

# Database schemas - use text diff
*.sql diff=sql
