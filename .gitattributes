*.yaml linguist-detectable=true

# Gherkin/Cucumber - detectable
*.feature linguist-language=Gherkin
*.feature linguist-detectable=true

# Shell scripts - detectable
*.sh linguist-language=Shell
*.sh linguist-detectable=true

# Batch files - detectable
*.bat linguist-language=Batchfile
*.bat linguist-detectable=true
*.cmd linguist-language=Batchfile
*.cmd linguist-detectable=true

# Configuration files - detectable
*.ini linguist-detectable=true
*.toml linguist-detectable=true
*.cfg linguist-detectable=true
.gitignore linguist-detectable=true
.gitattributes linguist-detectable=true
.dockerignore linguist-language=Ignore\ List
.dockerignore linguist-detectable=true
.env.example linguist-language=Shell
.env.example linguist-detectable=true
requirements*.txt linguist-detectable=true
pytest.ini linguist-detectable=true
Dockerfile linguist-language=Dockerfile
